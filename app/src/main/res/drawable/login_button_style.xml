<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#c6beb0" />

            <corners
                android:radius="10dp"
                />
        </shape>
    </item>



<item>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
    <corners
        android:radius="10dp"
        />
    <gradient
        android:angle="45"
        android:centerX="35%"

        android:startColor="#bab7b0"
        android:centerColor="#8e8c87"
        android:endColor="#1e1e1c"
        android:type="linear"
        />
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp"
        />


</shape>
</item>
    </selector>