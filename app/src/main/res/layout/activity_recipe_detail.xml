<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/detailbackground"
      >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="20dp"
        android:paddingLeft="25dp"
        android:paddingTop="170dp"
        android:paddingBottom="57dp"
        >

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:scrollbars = "vertical"
    android:scrollbarStyle="insideInset"
      >


    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:stretchColumns="1"


        >

    <!-- everything else goes have -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/ingridients"
                android:layout_centerVertical="true"
                android:textSize="20dp"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/direction"
                android:textSize="20dp"
                android:textColor="#000000">
            </TextView>





    </TableLayout>

    </ScrollView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/share"
            android:src="@drawable/share_icon"
            android:scaleType="fitXY"
            android:layout_alignParentRight="true"
            android:layout_marginRight="70dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/image_pressed"
            android:onClick="shareButtonClicked"/>

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/map"
            android:src="@drawable/gourmet"
            android:scaleType="fitXY"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="70dp"
            android:background="@drawable/image_pressed"
            android:onClick="restaurantButtonClicked"/>

        <ImageButton
            android:layout_width="45dp"
            android:layout_height="43dp"
            android:id="@+id/speaker"
            android:scaleType="fitXY"
            android:src="@drawable/speaker_icon"
            android:layout_alignBottom="@+id/share"
            android:layout_centerHorizontal="true"
            android:background="@drawable/image_pressed" />

    </RelativeLayout>
</RelativeLayout>